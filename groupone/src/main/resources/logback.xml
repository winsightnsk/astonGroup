<configuration>
    <!-- Аппендер для файла с перезаписью -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>application.log</file>
        <append>false</append> <!-- false = перезапись файла при каждом запуске -->

        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%-5level] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Корневой логгер -->
    <root level="INFO">
        <appender-ref ref="FILE" />
    </root>
</configuration>